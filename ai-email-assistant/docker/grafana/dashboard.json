{
  "dashboard": {
    "id": null,
    "uid": "email-assistant-dashboard",
    "title": "AI Email Assistant Metrics",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "type": "stat",
        "title": "Total Emails Generated",
        "id": 1,
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "sum(email_generated_total)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 100, "color": "orange" },
                { "value": 500, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "type": "gauge",
        "title": "Average Resume Match Score",
        "id": 2,
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "avg(resume_match_score)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "red" },
                { "value": 60, "color": "orange" },
                { "value": 80, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "type": "graph",
        "title": "Emails Generated Over Time",
        "id": 3,
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "rate(email_generated_total[5m])",
            "refId": "C"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Emails/min"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "type": "stat",
        "title": "Active Users (7d)",
        "id": 4,
        "datasource": "Prometheus",
        "targets": [
          {
            "expr": "count(active_users_7d)",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        }
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    }
  }
}
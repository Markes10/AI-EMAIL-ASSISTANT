{
  "name": "ai-email-assistant",
  "version": "1.0.0",
  "description": "An AI-powered email assistant for generating and managing professional emails",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && python main.py",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && pytest",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && flake8",
    "format": "npm run format:frontend && npm run format:backend",
    "format:frontend": "cd frontend && prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "format:backend": "cd backend && black .",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "prepare": "husky install",
    "postinstall": "cd frontend && npm install"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "frontend/src/**/*.{json,css,scss,md}": [
      "prettier --write"
    ],
    "backend/**/*.py": [
      "black",
      "flake8"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ai-email-assistant.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ai-email-assistant/issues"
  },
  "homepage": "https://github.com/yourusername/ai-email-assistant#readme",
  "keywords": [
    "ai",
    "email",
    "assistant",
    "nlp",
    "machine-learning",
    "react",
    "python",
    "flask"
  ]
}
